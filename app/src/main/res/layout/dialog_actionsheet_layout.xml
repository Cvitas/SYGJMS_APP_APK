<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/actionsheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionsheet_top_normal"
        android:gravity="center"
        android:text="菜单标题"
        android:textColor="#aaaaaa"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/actionsheet_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/actionsheet_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/actionsheet_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/actionsheet_single_selector"
        android:text="取消"
        android:textColor="@color/app_text_dark_blue"
        android:textSize="20sp" />

</LinearLayout>