<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF" >

    <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true"
            android:background="@drawable/content_bg" >

        <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="温馨提醒"
                android:textColor="@color/app_text_black_color"
                android:textSize="@dimen/tv_size_50"/>

        <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/app_person_color"
                android:text="内容"
                android:textSize="@dimen/tv_size_30" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >
            <Button
                    android:id="@+id/dialog_btn_sure"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/alert_message_btn_bg"
                    android:textColor="@color/app_text_white"
                    android:textSize="@dimen/tv_size_40"
                    android:padding="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="上报消息"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>